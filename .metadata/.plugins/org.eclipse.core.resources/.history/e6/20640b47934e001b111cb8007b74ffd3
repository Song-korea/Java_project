package rollingBall;

import java.util.LinkedList;

public class BallCor {

	private LinkedList<BallGroup> ballSet;
	private String 				  material; 
	
	
	public BallCor(String material) {
		ballSet = new LinkedList<BallGroup>();
		this.material = material;
	}
	
	public void addBall(BallGroup ballGroup) {
		ballSet.add(ballGroup);
	}

	public void deleteBall() {
		// TODO Auto-generated method stub
	}
	
	public int getBallSetSize() {
		// TODO Auto-generated method stub
		return ballSet.size();
	}
	
	public BallGroup getBallGroup(int i) {
		return ballSet.get(i);
	}
	
	
}
